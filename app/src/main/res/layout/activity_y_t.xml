<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".YTActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/yut"
            android:id="@+id/companyName"
            android:textAlignment="center"
            android:textSize="20sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/get_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/qhmm">

            </CheckBox>

            <TextView
                android:id="@+id/today_date"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/_12">

            </TextView>

            <EditText
                android:id="@+id/getNum_edt"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="0.8"
                android:gravity="center_horizontal"
                android:hint="@string/inq"
                android:text="@string/a_111"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/getNum_edt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center_horizontal"
                android:hint="@string/inq"
                android:text="@string/_222111"
                android:textAlignment="center">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st">

            </TextView>

            <TextView
                android:id="@+id/fsts_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_111">


            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"
                android:text="@string/phon">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:id="@+id/tx_get_code_yt"
                android:layout_marginRight="20dp"
                android:text="@string/qhm">

            </TextView>

        </LinearLayout>

        <ListView
            android:id="@+id/yt_listview"
            android:layout_width="match_parent"
            android:layout_height="320dp">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/msg_begin"
                android:layout_height="wrap_content"
                android:text="@string/sms1">

            </TextView>

            <EditText
                android:id="@+id/edt_kd_fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/app_name"
                android:textAlignment="center">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kdydl"
                android:text="@string/sms11">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:hint="@string/inad">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/useCode"
                android:text="@string/inqhm">

            </TextView>

            <EditText
                android:id="@+id/input_getnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:hint="@string/qhm_l">

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/kdydgh"
                android:layout_height="wrap_content"
                android:text="@string/qhm_dh">

            </TextView>

            <EditText
                android:id="@+id/input_ph"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="@string/in_ph">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/yiyuan"
                android:layout_height="wrap_content"
                android:text="@string/app">

            </TextView>

        </LinearLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="@string/se"
            android:textAlignment="center"
            tools:ignore="RtlCompat">

        </Button>


        <com.example.SupportDecline.CustomFAB
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/scan_btn_yt"
            android:background="@color/light_blue"
            android:src="@android:drawable/ic_input_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:tint="@android:color/white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>